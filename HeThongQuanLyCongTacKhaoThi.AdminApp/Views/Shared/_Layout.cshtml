    @RenderSection("Scripts", required: false)

<script>
        $(document).ready(function () {
            // init position of toastr
            toastr.options = {
                "positionClass": "toast-bottom-right"
            }

            var connection = new signalR.HubConnectionBuilder()
                .withUrl("@Configuration["BaseAddress"]/notificationHub", { accessTokenFactory: () => "@Context.Session.GetString("Token")" })
                .build();

            connection.on("SendToTeacher", function (message, studentAnswerID) {
                toastr.info('Vừa có học viên nộp bài');

                var newNotification =
                    "<a class='dropdown-item d-flex align-items-center alert-item' href='@Url.Action("","")?studentAnswerID=" + studentAnswerID + "'>" +
                    "<div class='mr-3'>" +
                    "<div class='icon-circle bg-primary'>" +
                    "<i class='fas fa-file-alt text-white'></i>" +
                    "</div>" +
                    "</div>" +
                    "<div>" +
                    "<div class='small text-gray-500'>" +
                    "Bây giờ" +
                    "</div>" +
                    "<span class='font-weight-bold'>Đã có học viên nộp bài với mã phách \"" + message + "\"</span>" +
                    "</div>" +
                    "</a>";

                $("#alert-items").prepend(newNotification);

                if ($(".alert-item").length > 5) {
                    $(".badge-counter").text("5+");
                    $(".alert-item").last().remove();
                } else {
                    $(".badge-counter").text($(".alert-item").length);
                }


                
            });

            connection.start().catch(function (err) {
                return console.error(err.toString());
            });
        });
</script>
