@using HeThongQuanLyCongTacKhaoThi.Utilities.Constants
@{
    ViewData["Title"] = "Trang chủ";
}

@if(User.Identity.Name != null && !User.IsInRole(Roles.Admin) && !User.IsInRole(Roles.Teacher))
{
