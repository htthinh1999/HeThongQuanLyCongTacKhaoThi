@using System.Collections.Generic
@model List<HeThongQuanLyCongTacKhaoThi.ViewModels.Catalog.Subjects.SubjectViewModel>


@{
    ViewData["Title"] = "Môn học giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Môn học giảng dạy của giảng viên @ViewBag.TeacherName</h4>
    <hr />
    @if (Model.Count == 0)
    {
        <p>
            Chưa có môn học giảng dạy nào
        </p>
    }
    else
    {
        <dl class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                <dt class="col-sm-2">
                    Môn học thứ @(i+1)
                </dt>
                <dd class="col-sm-10">
                    @Model[i].Name
                </dd>
            }
        </dl>
    }

</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Index">Quay lại danh sách giáo viên</a>
</div>